{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    // "preserveValueImports": false,
    // "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "types": ["node"],
    "removeComments": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*"]
}
